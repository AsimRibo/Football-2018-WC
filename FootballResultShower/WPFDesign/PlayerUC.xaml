<UserControl x:Class="WPFDesign.PlayerUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFDesign"
             mc:Ignorable="d" 
             d:DesignHeight="110" d:DesignWidth="110"
             FontFamily="Comic Sans MS" FontSize="11" FontWeight="Bold">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Label x:Name="lbName" Content="Player" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="Black" Foreground="AntiqueWhite" Margin="3"></Label>
        <Image x:Name="imgPlayer" Grid.Row="1" 
           Stretch="Fill" Width="40" Height="40" />
        <Label Grid.Row="2" x:Name="lbNumber" Content="10" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16"/>
    </Grid>
</UserControl>
